<record id="view_hr_job_experience_form" model="ir.ui.view">
    <field name="name">hr.job.experience.form</field>
    <field name="model">hr.job.experience</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="job_id"/>
                <field name="name"/>
                <field name="weight"/>
            </group>
        </form>
    </field>
